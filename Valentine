    <source src="https://cdn.pixabay.com/audio/2022/10/11/audio_8c78cddc9b.mp3" type="audio/mpeg">
  </audio>

  <div class="container">
    <h1>Hey Love üíï</h1>
    <p id="question">Will you be my Valentine forever, Aishu? üåπ</p>

    <div class="buttons">
      <button id="yesBtn">Yes üíñ</button>
      <button id="noBtn">No üôà</button>
    </div>

    <div class="love-text" id="loveText">
      Aishu, I choose you ‚Äî not just today, but in every lifetime. üíû<br>
      With you, even the ordinary feels magical, and every moment feels like home.<br>
      Hold my hand, walk with me, and be my forever Valentine. üåπ‚ú®üíç
    </div>
  </div>

  <script>
    const noBtn = document.getElementById('noBtn');
    const yesBtn = document.getElementById('yesBtn');
    const loveText = document.getElementById('loveText');
    const music = document.getElementById('bgMusic');
    const question = document.getElementById('question');

    let noClicks = 0;
    const cuteQuestions = [
      'Are you sure? ü•∫',
      'Think again, cutie üíó',
      'What if I give you chocolates? üç´',
      'I‚Äôll be sad üò≠',
      'Last chanceeee üòò'
    ];

    noBtn.addEventListener('click', () => {
      noClicks++;

      const container = document.querySelector('.container');
      const containerRect = container.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      const padding = 20;
      const maxX = containerRect.width - btnRect.width - padding;
      const maxY = containerRect.height - btnRect.height - padding - 80;

      const x = Math.random() * maxX;
      const y = Math.random() * maxY + 60;

      noBtn.style.position = 'absolute';
      noBtn.style.left = x + 'px';
      noBtn.style.top = y + 'px';

      if (noClicks <= cuteQuestions.length) {
        question.innerText = cuteQuestions[noClicks - 1];
      }
    });

    yesBtn.addEventListener('click', () => {
      loveText.style.display = 'block';
      document.querySelector('.buttons').style.display = 'none';
      question.innerText = 'My heart is yours, Aishu üíï';
      music.play();
    });

    function createHeart() {
      const heart = document.createElement('div');
      heart.classList.add('heart');
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = (Math.random() * 3 + 3) + 's';
      document.body.appendChild(heart);

      setTimeout(() => heart.remove(), 6000);
    }

    setInterval(createHeart, 300);
  </script>
